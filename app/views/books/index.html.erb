<h1 class="title">Books</h1>

<table class="table" cellpadding="20" cellspacing="20">
    <tr>
        <th>Title</th>
        <th>Body</th>
    </tr>

    <% @books.each do |book| %>
    <tr>
        <td><%= book.Title %></td>
        <td><%= book.Body %></td>
        <td><%= link_to "Show", book_path(book), class: "show_#{book.id}" %></td>
        <td><%= link_to "Edit", edit_book_path(book), class: "edit_#{book.id}" %></td>
        <td><%= link_to "Destroy", book_path(book), class: "destroy_#{book.id}", method: :delete, data:{ confirm: "Are you sure?" } %></td>
    </tr>
    <% end %>

</table>

<h2 class="title">New book</h2>

<!-- form_for部分 -->
<div class="form">
  <%= form_for(@book) do |f| %>

    <h6>Title</h6>
    <%= f.text_field :Title, class: "book_title" %>

    <h6>Body</h6>
    <%= f.text_area :Body, class: "book_body" %>

    <%= f.submit "Create Book" %>
  <% end %>

</div>
